package com.hi.udp;

import java.io.IOException;
import java.net.*;

public class HiReceiver { // 받는 사람

	public static void main(String[] args) {
		
		DatagramSocket sock = null;
		DatagramPacket pack = null;
		
		try {
			sock = new DatagramSocket(5000);
			
			sock.receive(pack);
			
		} catch (SocketException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			sock.close();
		}

	}

}
